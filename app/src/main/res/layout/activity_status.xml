<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdelrhman.mychatapplication.StatusActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/statusAppBar">
    </include>

    <EditText
        android:id="@+id/status_Input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/statusAppBar"
        android:layout_marginTop="66dp"
        android:hint="Change Status here"
        android:padding="30dp" />

    <Button
        android:id="@+id/status_Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_Input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@color/colorPrimary"
        android:text="Save Changes"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />
</RelativeLayout>
