<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdelrhman.mychatapplication.SettingActivity"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/defulat_profile"
        android:id="@+id/circleImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circleImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="UserName"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:id="@+id/setting_UserAnme" />

    <TextView
        android:id="@+id/setting_User_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_UserAnme"
        android:layout_marginTop="17dp"
        android:text="User Profile Status"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="7dp"
        android:layout_margin="7dp"
        />

    <Button
        android:id="@+id/setting_Change_Image_Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setting_Change_status_Button"
        android:layout_alignLeft="@+id/setting_Change_status_Button"
        android:layout_alignStart="@+id/setting_Change_status_Button"
        android:layout_marginBottom="21dp"
        android:background="@color/colorWhite"
        android:text="Change Image"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/setting_Change_status_Button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:background="@color/colorGreen"
        android:text="Change Status"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"/>



</RelativeLayout>
