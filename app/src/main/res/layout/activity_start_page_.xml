<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdelrhman.mychatapplication.StartPage_Activity"
    android:background="@drawable/start_page">

    <Button
        android:id="@+id/have_account_btn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/need_account_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:text="Already Have An Account? "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />


    <Button
        android:id="@+id/need_account_btn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/have_account_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/have_account_btn"
        android:layout_marginBottom="48dp"
        android:background="@color/colorWhite"
        android:padding="10dp"
        android:text="Need An Account? "
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />



</RelativeLayout>
